#include "planta.h"

planta::planta()
{
    p=new puerta;
    idplanta=0;
    salaentrada=0;
    salasalida=0;
    nllaves=0;
    altoplanta=0;
    anchoplanta=0;
    for(int i=0;i<altoplanta*anchoplanta;i++){
        insertarVector(new sala(i,i,0));
    }
    for(int i=0;i<anchoplanta*altoplanta;i++){
        insertarNodoGrafo(i);
    }
}
planta::planta(int idp, int se, int ss, int nll, int anch, int alt)
{
    p=new puerta;
    idplanta=idp;
    salaentrada=se;
    salasalida=ss;
    nllaves=nll;
    anchoplanta=anch;
    altoplanta=alt;
    for(int i=0;i<altoplanta*anchoplanta;i++){
        insertarVector(new sala(i,i,0));
    }
    for(int i=0;i<anchoplanta*altoplanta;i++){
        insertarNodoGrafo(i);
    }
   
}


planta::~planta()
{
    for(int i=0;i<v.size();i++){
        delete v[i];
    }
    delete p;
}




